<?xml version="1.0" encoding="UTF-8"?>
<persistence version="1.0" xmlns="http://java.sun.com/xml/ns/persistence" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://java.sun.com/xml/ns/persistence http://java.sun.com/xml/ns/persistence/persistence_1_0.xsd">
  <persistence-unit name="magatePU" transaction-type="RESOURCE_LOCAL">
    <provider>oracle.toplink.essentials.PersistenceProvider</provider>
    <class>ch.hefr.gridgroup.magate.gui.Scenarios</class>
    <properties>
      <property name="toplink.jdbc.url" value="jdbc:h2:tcp://localhost/~/magate"/>
      <property name="toplink.jdbc.user" value="sa"/>
      <property name="toplink.jdbc.driver" value="org.h2.Driver"/>
      <property name="toplink.jdbc.password" value="sa"/>
    </properties>
  </persistence-unit>
</persistence>
